@model List<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    List<Product> distinctCategories = Model.GroupBy(m => m.Category).Select(g => g.First()).ToList();
}

<h2>Products by category</h2>

@foreach(Product p in distinctCategories)
{
    <p><a asp-controller="Home" asp-action="ProductCategory" asp-route-Category="@p.Category">@p.Category</a></p>
}

<h2>All Products</h2>

@foreach(Product p in Model)
{
    <p><a asp-controller="Home" asp-action="ProductDetails" asp-route-ID="@p.Id">@p.Name</a> @p.Price</p>
}
